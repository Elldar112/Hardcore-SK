<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- Fixes "Could not find parent node named XXX if patching a mod who has a higher load order than you "-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs</xpath>
		<value>
			<ThingDef Name="AmmoBoltBaseDummy" ParentName="AmmoBoltBase" Abstract="True"/>
			<ThingDef Name="BaseBoltProjectileDummy" ParentName="BaseBoltProjectile" Abstract="True"/>
		</value>
	</Operation>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="Ammo_NerveSpikerBolt"]</xpath>
		<attribute>ParentName</attribute>
		<value>AmmoBoltBaseDummy</value>
	</Operation>

	<Operation Class="PatchOperationAttributeSet">
		<xpath>Defs/ThingDef[defName="Projectile_NerveSpikerBolt"]</xpath>
		<attribute>ParentName</attribute>
		<value>BaseBoltProjectileDummy</value>
	</Operation>

</Patch>