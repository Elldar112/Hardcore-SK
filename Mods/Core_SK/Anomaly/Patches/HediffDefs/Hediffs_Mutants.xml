<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationConditional">
		<xpath>Defs/HediffDef[defName="Ghoul"]/stages/li/statOffsets/Suppressability</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/HediffDef[defName="Ghoul"]/stages/li/statOffsets</xpath>
			<value>
				<Suppressability>-1</Suppressability>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>Defs/HediffDef[defName="GhoulPlating"]/stages/li/statOffsets/ArmorRating_Sharp</xpath>
		<nomatch Class="SK.PatchOperationReplaceExtended">
			<xpath>Defs/HediffDef[defName="GhoulPlating"]/stages/li/statOffsets</xpath>
			<value>
				<ArmorRating_Sharp>5</ArmorRating_Sharp>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>Defs/HediffDef[defName="GhoulPlating"]/stages/li/statOffsets/ArmorRating_Blunt</xpath>
		<nomatch Class="SK.PatchOperationReplaceExtended">
			<xpath>Defs/HediffDef[defName="GhoulPlating"]/stages/li/statOffsets</xpath>
			<value>
				<ArmorRating_Blunt>7.5</ArmorRating_Blunt>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/HediffDef[defName="GhoulPlating"]/tags</xpath>
		<value>
			<li>ArmorGland</li>
		</value>
	</Operation>

</Patch>