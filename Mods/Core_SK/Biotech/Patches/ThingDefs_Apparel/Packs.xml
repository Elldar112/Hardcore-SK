<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>

			<!-- control pack -->

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_PackControl"]/costList</xpath>
				<value>
					<stuffCategories>
						<li>Metallic</li>
					</stuffCategories>
					<costStuffCount>100</costStuffCount>
					<costList>
						<Wire>20</Wire>
						<ComponentIndustrial>4</ComponentIndustrial>
						<ElectronicComponents>2</ElectronicComponents>
						<Electronics>1</Electronics>
					</costList>
				</value>
			</li>

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_PackControl"]/recipeMaker/skillRequirements</xpath>
				<value>
				  <skillRequirements>
					<Crafting>10</Crafting>
				  </skillRequirements>
				</value>
			</li>

			<!-- bandwidth pack -->

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_PackBandwidth"]/costList</xpath>
				<value>
					<stuffCategories>
						<li>Metallic</li>
					</stuffCategories>
					<costStuffCount>50</costStuffCount>
					<costList>
						<SignalChip>2</SignalChip>
						<ComponentIndustrial>6</ComponentIndustrial>
						<ElectronicComponents>3</ElectronicComponents>
						<Electronics>2</Electronics>
					</costList>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_PackBandwidth"]/recipeMaker/skillRequirements</xpath>
				<value>
				  <skillRequirements>
					<Crafting>14</Crafting>
				  </skillRequirements>
				</value>
			</li>

			<!-- tox pack -->

			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Apparel_PackTox"]/costList</xpath>
				<value>
					<stuffCategories>
						<li>Metallic</li>
					</stuffCategories>
					<costStuffCount>25</costStuffCount>
					<costList>
						<ComponentIndustrial>1</ComponentIndustrial>
						<Mechanism>1</Mechanism>
						<Chemfuel>35</Chemfuel>
					</costList>
				</value>
			</li>

		</operations>
	</Operation>

</Patch>
