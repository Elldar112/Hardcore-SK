<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<!-- Skill decays 300 times a day, make sure the rate * 300 won't be greater than the threshold -->

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/SkillDef</xpath>
		<value>
			<li Class="SK.SkillDecayExtension">
				<xpThresholdPerDay>8000</xpThresholdPerDay>
				<decayCurve>
					<points>
						<li>(8,-0.4)</li>
						<li>(9,-1)</li>
						<li>(10,-1.5)</li>
						<li>(11,-2.3)</li>
						<li>(12,-3.4)</li>
						<li>(13,-5)</li>
						<!-- Vanilla consider lvl 14 as master skill-->
						<li>(14,-4.8)</li>
						<li>(15,-3.2)</li>
						<li>(16,-2.4)</li>
						<li>(17,-1.9)</li>
						<li>(18,-1)</li>
						<li>(19,-0.5)</li>
						<li>(20,0)</li>
					</points>
				</decayCurve>
			</li>
		</value>
	</Operation>

	<Operation Class="SK.PatchOperationReplaceExtended">
		<xpath>Defs/SkillDef[defName="Shooting" or defName="Melee"]/modExtensions/li[@Class="SK.SkillDecayExtension"]</xpath>
		<value>
			<xpThresholdPerDay>10000</xpThresholdPerDay>
			<decayCurve>
				<points>
					<li>(10,0)</li>
					<li>(11,0)</li>
					<li>(12,0)</li>
					<li>(13,0)</li>
					<!-- Vanilla consider lvl 14 as master skill-->
					<li>(14,-7)</li>
					<li>(15,-10)</li>
					<li>(16,-12)</li>
					<li>(17,-14)</li>
					<li>(18,-16)</li>
					<li>(19,-18)</li>
					<li>(20,-20)</li>
				</points>
			</decayCurve>
		</value>
	</Operation>
</Patch>