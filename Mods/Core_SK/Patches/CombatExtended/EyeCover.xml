<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ApparelLayerDef[defName="EyeCover"]</xpath>
		<value>
		  <li Class="CombatExtended.ApparelLayerExtension">
			<IsHeadwear>true</IsHeadwear>
		  </li>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Apparel_AirwireHeadset" or defName="Apparel_ArrayHeadset"]/apparel/layers</xpath>
		<value>
			<layers>
				<li>EyeCover</li>
			</layers>  
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="CE_Apparel_GasMask" or defName="CE_Apparel_ImprovGasMask" or defName="CE_Apparel_SimpleNightVision" or defName="CE_Apparel_AdvancedNightVision"]/apparel/layers</xpath>
		<value>
			<layers>
				<li>EyeCover</li>
			</layers>  
		</value>
	</Operation>

</Patch>